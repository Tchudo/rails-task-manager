<div class="container">

  <h1><%= @task.title %></h1>

  <p><%= @task.details %></p>

  <input type="checkbox" name="<%= @task.title %>"
        <% if @task.completed %>
           checked>
        <% else %>
          >
        <% end %>

  <% if @task.completed %>
          <label for="<%= @task.title %>">Cette tâche est terminée</label>
  <% else %>
          <label for="<%= @task.title %>">Tâche à faire</label>

  <% end %>

  <p><%= link_to 'Modify', task_edit_path(@task) %></p>
 <%= link_to "Delete", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>

 <p><%= link_to '<Back to list', tasks_path %></p>

</div>
